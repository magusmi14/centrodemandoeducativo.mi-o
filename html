import React, { useState, useEffect, useMemo } from 'react';
import { initializeApp } from 'firebase/app';
import { 
  getFirestore, collection, doc, onSnapshot, setDoc, 
  updateDoc, addDoc, query 
} from 'firebase/firestore';
import { 
  getAuth, signInAnonymously, onAuthStateChanged, signInWithCustomToken 
} from 'firebase/auth';
import { 
  GraduationCap, Plus, Settings, LogOut, ChevronRight, 
  BookOpen, MinusCircle, PlusCircle, BarChart3, Edit2, 
  Save, Rocket, Users, Target, Shield, Star, AlertTriangle,
  FileText, MessageSquare
} from 'lucide-react';

const firebaseConfig = JSON.parse(__firebase_config);
const app = initializeApp(firebaseConfig);
const auth = getAuth(app);
const db = getFirestore(app);
const appId = typeof __app_id !== 'undefined' ? __app_id : 'bitacora-estelar-v2';

export default function App() {
  const [user, setUser] = useState(null);
  const [loading, setLoading] = useState(true);
  const [students, setStudents] = useState([]);
  const [config, setConfig] = useState({
    titulo: 'CENTRO DE MANDO EDUCATIVO',
    anyo: '2024',
    cursos: '1A, 2A, 3A',
    asigs: 'Matemática, Lengua, Física',
    clases: 20
  });
  
  const [isEditingTitle, setIsEditingTitle] = useState(false);
  const [tempTitle, setTempTitle] = useState('');
  const [activeTab, setActiveTab] = useState('all');
  const [isConfigOpen, setIsConfigOpen] = useState(false);
  const [isAddOpen, setIsAddOpen] = useState(false);
  const [activeStudent, setActiveStudent] = useState(null);
  const [activeAsig, setActiveAsig] = useState('');
  const [obsTemp, setObsTemp] = useState('');

  const CAP_THEME = {
    S: { color: '#10b981', label: 'Superior', bg: 'bg-emerald-500' },
    A: { color: '#3b82f6', label: 'Aceptable', bg: 'bg-blue-600' },
    M: { color: '#f59e0b', label: 'Medio', bg: 'bg-amber-500' },
    D: { color: '#f43f5e', label: 'Deficiente', bg: 'bg-rose-600' }
  };

  useEffect(() => {
    const initAuth = async () => {
      if (typeof __initial_auth_token !== 'undefined' && __initial_auth_token) {
        await signInWithCustomToken(auth, __initial_auth_token);
      } else {
        await signInAnonymously(auth);
      }
    };
    initAuth();
    const unsubscribe = onAuthStateChanged(auth, (u) => {
      setUser(u);
      setLoading(false);
    });
    return () => unsubscribe();
  }, []);

  useEffect(() => {
    if (!user) return;
    const configRef = doc(db, 'artifacts', appId, 'users', user.uid, 'config', 'general');
    const unsubConfig = onSnapshot(configRef, (docSnap) => {
      if (docSnap.exists()) {
        const data = docSnap.data();
        setConfig(prev => ({ ...prev, ...data }));
        setTempTitle(data.titulo || 'CENTRO DE MANDO EDUCATIVO');
      }
    });

    const studentsRef = collection(db, 'artifacts', appId, 'users', user.uid, 'alumnos');
    const unsubStudents = onSnapshot(studentsRef, (snap) => {
      setStudents(snap.docs.map(d => ({ id: d.id, ...d.data() })));
    });

    return () => { unsubConfig(); unsubStudents(); };
  }, [user]);

  // Actualizar observación local al cambiar de alumno
  useEffect(() => {
    if (activeStudent) {
      setObsTemp(activeStudent.observaciones || '');
    }
  }, [activeStudent?.id]);

  const getStudentStatus = (student) => {
    const allEvals = student.evaluaciones || {};
    let total = 0;
    let superior = 0;
    
    Object.values(allEvals).forEach(asig => {
      Object.values(asig).forEach(val => {
        if (val) total++;
        if (val === 'S' || val === 'A') superior++;
      });
    });

    const performance = total > 0 ? (superior / total) * 100 : 0;
    if (performance >= 85) return { label: 'Comandante Estelar', icon: <Shield className="w-3 h-3" />, color: 'text-yellow-400' };
    if (performance >= 70) return { label: 'Oficial Veterano', icon: <Star className="w-3 h-3" />, color: 'text-cyan-400' };
    return { label: 'Cadete Novato', icon: <Rocket className="w-3 h-3" />, color: 'text-slate-400' };
  };

  // Cálculo corregido de Inasistencias (1.0 falta, 0.25 tarde)
  const getAbsenceScore = (student) => {
    const f = parseFloat(student.faltas || 0);
    const t = parseFloat(student.tardes || 0) * 0.25;
    return (f + t).toFixed(2);
  };

  const handleUpdateCounter = async (id, field, delta) => {
    if (!user) return;
    const student = students.find(s => s.id === id);
    const newVal = Math.max(0, (parseFloat(student[field] || 0)) + delta);
    await updateDoc(doc(db, 'artifacts', appId, 'users', user.uid, 'alumnos', id), { [field]: newVal });
  };

  const saveTitle = async () => {
    if (!user) return;
    await setDoc(doc(db, 'artifacts', appId, 'users', user.uid, 'config', 'general'), { ...config, titulo: tempTitle.toUpperCase() }, { merge: true });
    setIsEditingTitle(false);
  };

  const saveObservations = async () => {
    if (!user || !activeStudent) return;
    await updateDoc(doc(db, 'artifacts', appId, 'users', user.uid, 'alumnos', activeStudent.id), { 
      observaciones: obsTemp 
    });
    // Feedback visual simple oculto por simplicidad
  };

  const groupedStudents = useMemo(() => {
    const groups = {};
    config.cursos.split(',').forEach(c => groups[c.trim()] = []);
    students.forEach(s => {
      if (groups[s.curso]) groups[s.curso].push(s);
      else { groups[s.curso] = [s]; }
    });
    return groups;
  }, [students, config.cursos]);

  const renderCapChart = (student, asigName) => {
    const evals = student.evaluaciones?.[asigName] || {};
    const counts = { S: 0, A: 0, M: 0, D: 0 };
    let total = 0;
    Object.values(evals).forEach(v => { if (CAP_THEME[v]) { counts[v]++; total++; } });

    if (total === 0) return <div className="h-32 w-32 rounded-full border-2 border-dashed border-white/10 flex items-center justify-center text-[8px] text-slate-500 uppercase text-center p-4">Sin telemetría</div>;

    const radius = 40;
    const circ = 2 * Math.PI * radius;
    let offset = 0;

    return (
      <div className="relative h-40 w-40 flex items-center justify-center">
        <svg viewBox="0 0 100 100" className="transform -rotate-90 w-full h-full">
          {['S', 'A', 'M', 'D'].map(key => {
            const perc = counts[key] / total;
            const stroke = perc * circ;
            const dash = `${stroke} ${circ}`;
            const currentOffset = offset;
            offset += stroke;
            return perc > 0 ? (
              <circle
                key={key} cx="50" cy="50" r={radius} fill="none"
                stroke={CAP_THEME[key].color} strokeWidth="12"
                strokeDasharray={dash} strokeDashoffset={-currentOffset}
                strokeLinecap="round" className="transition-all duration-1000"
              />
            ) : null;
          })}
        </svg>
        <div className="absolute inset-0 flex flex-col items-center justify-center">
          <span className="text-2xl font-black text-white leading-none">{total}</span>
          <span className="text-[7px] text-cyan-400 font-bold tracking-tighter uppercase">Clases</span>
        </div>
      </div>
    );
  };

  if (loading) return <div className="min-h-screen bg-[#050505] flex items-center justify-center"><Rocket className="animate-bounce text-cyan-500" /></div>;

  return (
    <div className="min-h-screen bg-[#050505] text-slate-300 font-sans selection:bg-cyan-500/30 pb-20">
      <div className="fixed inset-0 pointer-events-none opacity-20">
        <div className="absolute top-0 left-1/4 w-96 h-96 bg-cyan-600 rounded-full blur-[150px]" />
        <div className="absolute bottom-0 right-1/4 w-96 h-96 bg-purple-600 rounded-full blur-[150px]" />
      </div>

      <header className="sticky top-0 z-40 bg-black/60 backdrop-blur-md border-b border-white/5 p-6 mb-8">
        <div className="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-center gap-6">
          <div className="flex items-center gap-4">
            <div className="p-3 bg-cyan-500/10 rounded-xl border border-cyan-500/20">
              <GraduationCap className="text-cyan-400" />
            </div>
            {isEditingTitle ? (
              <div className="flex gap-2">
                <input value={tempTitle} onChange={e => setTempTitle(e.target.value)} className="bg-white/5 border-b border-cyan-500 text-xl font-black text-white uppercase px-2 outline-none" />
                <button onClick={saveTitle} className="text-emerald-400"><Save size={20} /></button>
              </div>
            ) : (
              <h1 onClick={() => setIsEditingTitle(true)} className="text-xl md:text-2xl font-black text-white uppercase tracking-tighter cursor-pointer hover:text-cyan-400 transition-colors">
                {config.titulo}
              </h1>
            )}
          </div>
          <div className="flex gap-3">
            <button onClick={() => setIsConfigOpen(true)} className="p-3 bg-white/5 rounded-xl border border-white/10 hover:border-white/20 transition-all"><Settings size={20} /></button>
            <button onClick={() => setIsAddOpen(true)} className="flex items-center gap-2 bg-cyan-600 hover:bg-cyan-500 text-white px-6 py-3 rounded-xl font-bold text-xs uppercase tracking-widest transition-all shadow-lg shadow-cyan-900/20">
              <Plus size={16} /> Nuevo Alumno
            </button>
          </div>
        </div>
        <div className="max-w-7xl mx-auto mt-6 flex gap-2 overflow-x-auto pb-2 scrollbar-hide">
          <button 
            onClick={() => setActiveTab('all')}
            className={`px-5 py-2 rounded-full text-[10px] font-black uppercase tracking-widest transition-all whitespace-nowrap ${activeTab === 'all' ? 'bg-cyan-500 text-white shadow-lg' : 'bg-white/5 text-slate-500 hover:bg-white/10'}`}
          >
            Todos los Sectores
          </button>
          {Object.keys(groupedStudents).map(curso => (
            <button 
              key={curso}
              onClick={() => setActiveTab(curso)}
              className={`px-5 py-2 rounded-full text-[10px] font-black uppercase tracking-widest transition-all whitespace-nowrap ${activeTab === curso ? 'bg-cyan-500 text-white shadow-lg' : 'bg-white/5 text-slate-500 hover:bg-white/10'}`}
            >
              Sector {curso}
            </button>
          ))}
        </div>
      </header>

      <main className="max-w-7xl mx-auto px-6">
        {Object.entries(groupedStudents).map(([curso, list]) => (
          (activeTab === 'all' || activeTab === curso) && list.length > 0 && (
            <div key={curso} className="mb-16">
              <div className="flex items-center gap-4 mb-8">
                <div className="h-px flex-1 bg-gradient-to-r from-transparent to-white/10" />
                <h2 className="text-xs font-black text-cyan-500 uppercase tracking-[0.6em] px-4">Sector {curso}</h2>
                <div className="h-px flex-1 bg-gradient-to-l from-transparent to-white/10" />
              </div>
              <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {list.map(student => {
                  const status = getStudentStatus(student);
                  const absence = getAbsenceScore(student);
                  return (
                    <div key={student.id} className="group bg-white/[0.02] border border-white/5 rounded-[2rem] p-6 hover:bg-white/[0.04] hover:border-cyan-500/30 transition-all duration-500 flex flex-col h-full">
                      <div className="flex justify-between items-start mb-6">
                        <div>
                          <h3 className="text-white font-bold text-lg uppercase tracking-tight group-hover:text-cyan-400 transition-colors">{student.nombre}</h3>
                          <div className="flex flex-col gap-1 mt-1">
                            <div className={`flex items-center gap-1.5 text-[9px] font-bold uppercase tracking-widest ${status.color}`}>
                              {status.icon} {status.label}
                            </div>
                            <div className="text-[9px] text-slate-500 font-bold uppercase tracking-widest">
                              Sector: {student.curso} ({config.anyo})
                            </div>
                          </div>
                        </div>
                        <button 
                          onClick={() => { setActiveStudent(student); setActiveAsig(config.asigs.split(',')[0].trim()); }}
                          className="p-3 bg-cyan-500/10 text-cyan-400 rounded-xl opacity-0 group-hover:opacity-100 transition-all"
                        >
                          <ChevronRight />
                        </button>
                      </div>
                      <div className="grid grid-cols-2 gap-3 mb-6">
                        <div className="bg-black/40 p-3 rounded-2xl border border-white/5 flex flex-col items-center">
                          <span className="text-[8px] font-black text-rose-500/70 uppercase tracking-widest mb-1">Impacto Ausencia</span>
                          <span className="text-xl font-black text-white font-mono">{absence}</span>
                        </div>
                        <div className="bg-black/40 p-3 rounded-2xl border border-white/5 flex flex-col items-center">
                          <span className="text-[8px] font-black text-cyan-500/70 uppercase tracking-widest mb-1">Faltas Reales</span>
                          <div className="flex items-center gap-2">
                            <button onClick={() => handleUpdateCounter(student.id, 'faltas', -1)} className="text-slate-600 hover:text-white"><MinusCircle size={14}/></button>
                            <span className="text-sm font-bold text-white">{student.faltas}</span>
                            <button onClick={() => handleUpdateCounter(student.id, 'faltas', 1)} className="text-slate-600 hover:text-white"><PlusCircle size={14}/></button>
                          </div>
                        </div>
                      </div>
                      <div className="mt-auto pt-4 border-t border-white/5 flex items-center justify-between">
                        <div className="flex gap-1">
                          {['S','A','M','D'].map(k => (
                            <div key={k} className={`w-1.5 h-6 rounded-full ${CAP_THEME[k].bg} opacity-20`} />
                          ))}
                        </div>
                        <div className="text-[9px] font-black text-slate-500 uppercase tracking-tighter flex items-center gap-2">
                           Llegadas Tarde: <span className="text-amber-500 font-mono">{student.tardes}</span>
                        </div>
                      </div>
                    </div>
                  );
                })}
              </div>
            </div>
          )
        ))}
      </main>

      {activeStudent && (
        <div className="fixed inset-0 z-50 bg-black/98 backdrop-blur-2xl overflow-y-auto animate-in fade-in zoom-in-95 duration-200">
          <div className="max-w-6xl mx-auto p-6 md:p-12">
            <div className="flex justify-between items-center mb-12">
              <div className="flex items-center gap-6">
                <div className="w-16 h-16 bg-gradient-to-br from-cyan-600 to-blue-700 rounded-2xl flex items-center justify-center text-3xl font-black text-white shadow-xl shadow-cyan-500/10">
                  {activeStudent.nombre[0]}
                </div>
                <div>
                  <h2 className="text-3xl font-black text-white uppercase tracking-tighter">{activeStudent.nombre}</h2>
                  <div className="flex items-center gap-3 text-[10px] font-bold text-cyan-400 tracking-[0.3em]">
                    <Target size={14} /> EXPEDIENTE DE SECTOR {activeStudent.curso}
                  </div>
                </div>
              </div>
              <button onClick={() => setActiveStudent(null)} className="p-4 bg-white/5 rounded-2xl hover:bg-rose-500 text-white transition-all"><LogOut /></button>
            </div>

            <div className="grid grid-cols-1 lg:grid-cols-12 gap-12">
              <div className="lg:col-span-4 space-y-8">
                {/* Radar de Rendimiento */}
                <div className="bg-white/[0.03] border border-white/10 rounded-[2.5rem] p-8 flex flex-col items-center">
                   <h4 className="text-[10px] font-black text-cyan-400 uppercase tracking-[0.4em] mb-8 text-center">Radar de Rendimiento</h4>
                   {renderCapChart(activeStudent, activeAsig)}
                   <div className="w-full mt-10 space-y-2">
                     {['S','A','M','D'].map(k => {
                       const count = Object.values(activeStudent.evaluaciones?.[activeAsig] || {}).filter(v => v === k).length;
                       return (
                         <div key={k} className="flex items-center justify-between p-3 bg-black/40 rounded-xl border border-white/5">
                           <div className="flex items-center gap-3">
                             <div className={`w-2 h-2 rounded-full ${CAP_THEME[k].bg}`} />
                             <span className="text-[9px] font-black text-slate-400 uppercase">{CAP_THEME[k].label}</span>
                           </div>
                           <span className="text-white font-mono text-sm">{count}</span>
                         </div>
                       );
                     })}
                   </div>
                </div>

                {/* Alerta de Inasistencia Corregida */}
                <div className="bg-rose-500/5 border border-rose-500/20 rounded-[2.5rem] p-8">
                   <div className="flex items-center gap-3 mb-4">
                     <AlertTriangle className="text-rose-500" size={18} />
                     <h4 className="text-[10px] font-black text-rose-500 uppercase tracking-widest">Alerta de Inasistencia</h4>
                   </div>
                   <div className="flex justify-between items-end">
                     <div>
                       <p className="text-2xl font-black text-white font-mono">{getAbsenceScore(activeStudent)}</p>
                       <p className="text-[8px] text-rose-500/60 font-bold uppercase">Impacto Acumulado</p>
                     </div>
                     <div className="text-right">
                        <p className="text-[10px] text-white/40 mb-1">Tardanza (0.25)</p>
                        <div className="flex items-center gap-3">
                          <button onClick={() => handleUpdateCounter(activeStudent.id, 'tardes', -1)} className="text-slate-500 hover:text-white"><MinusCircle size={16}/></button>
                          <span className="text-white font-bold font-mono">{activeStudent.tardes}</span>
                          <button onClick={() => handleUpdateCounter(activeStudent.id, 'tardes', 1)} className="text-slate-500 hover:text-white"><PlusCircle size={16}/></button>
                        </div>
                     </div>
                   </div>
                </div>

                {/* NUEVA SECCIÓN: Bitácora de Observaciones */}
                <div className="bg-white/[0.03] border border-white/10 rounded-[2.5rem] p-8">
                  <div className="flex items-center gap-3 mb-6">
                    <MessageSquare className="text-cyan-400" size={18} />
                    <h4 className="text-[10px] font-black text-white uppercase tracking-widest">Bitácora de Observaciones</h4>
                  </div>
                  <textarea 
                    value={obsTemp}
                    onChange={(e) => setObsTemp(e.target.value)}
                    placeholder="Escribe aquí el compromiso del alumno, conducta, desempeño en evaluaciones específicas..."
                    className="w-full h-48 bg-black/40 border border-white/5 rounded-2xl p-4 text-xs text-slate-300 outline-none focus:border-cyan-500/50 transition-all resize-none mb-4"
                  />
                  <button 
                    onClick={saveObservations}
                    className="w-full flex items-center justify-center gap-2 bg-white/5 hover:bg-white/10 text-[9px] font-black uppercase tracking-widest text-white py-3 rounded-xl border border-white/10 transition-all"
                  >
                    <Save size={14} /> Guardar Comentarios
                  </button>
                </div>
              </div>

              <div className="lg:col-span-8">
                <div className="bg-white/[0.03] border border-white/10 rounded-[2.5rem] p-8">
                  <div className="flex flex-col md:flex-row justify-between gap-6 mb-10">
                    <div className="flex items-center gap-4">
                      <BookOpen className="text-cyan-400" />
                      <h4 className="text-sm font-black text-white uppercase tracking-widest">Módulos de Aprendizaje</h4>
                    </div>
                    <select 
                      value={activeAsig} 
                      onChange={e => setActiveAsig(e.target.value)}
                      className="bg-black border border-cyan-500/30 text-cyan-400 text-xs font-black uppercase px-6 py-3 rounded-xl outline-none"
                    >
                      {config.asigs.split(',').map(a => <option key={a} value={a.trim()}>{a.trim()}</option>)}
                    </select>
                  </div>
                  <div className="grid grid-cols-2 sm:grid-cols-4 md:grid-cols-5 gap-4">
                    {Array.from({ length: config.clases }).map((_, i) => {
                      const num = i + 1;
                      const currentVal = (activeStudent.evaluaciones?.[activeAsig] || {})[num];
                      return (
                        <div key={num} className="bg-black/40 border border-white/5 rounded-2xl p-4">
                          <p className="text-[7px] font-black text-slate-500 uppercase text-center mb-3">Sesión {num}</p>
                          <div className="flex flex-wrap gap-1.5 justify-center">
                            {['S','A','M','D'].map(k => (
                              <button 
                                key={k}
                                onClick={async () => {
                                  const evals = { ...activeStudent.evaluaciones };
                                  const asigEvals = { ...(evals[activeAsig] || {}) };
                                  asigEvals[num] = asigEvals[num] === k ? "" : k;
                                  evals[activeAsig] = asigEvals;
                                  await updateDoc(doc(db, 'artifacts', appId, 'users', user.uid, 'alumnos', activeStudent.id), { evaluaciones: evals });
                                  setActiveStudent({ ...activeStudent, evaluaciones: evals });
                                }}
                                className={`w-7 h-7 rounded-lg text-[9px] font-black transition-all ${currentVal === k ? CAP_THEME[k].bg + ' text-white shadow-lg' : 'bg-white/5 text-slate-600 hover:bg-white/10'}`}
                              >
                                {k}
                              </button>
                            ))}
                          </div>
                        </div>
                      );
                    })}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      )}

      {/* Modal Configuracion */}
      {isConfigOpen && (
        <div className="fixed inset-0 z-[60] bg-black/90 flex items-center justify-center p-6 backdrop-blur-md">
          <form 
            onSubmit={async (e) => {
              e.preventDefault();
              const d = new FormData(e.target);
              const nc = { ...config, anyo: d.get('anyo'), clases: parseInt(d.get('clases')), cursos: d.get('cursos'), asigs: d.get('asigs') };
              await setDoc(doc(db, 'artifacts', appId, 'users', user.uid, 'config', 'general'), nc);
              setIsConfigOpen(false);
            }}
            className="bg-[#0a0a0a] border border-white/10 w-full max-w-lg rounded-[2.5rem] p-10"
          >
            <h3 className="text-center text-white font-black uppercase text-xs tracking-widest mb-8">Protocolo de Sistema</h3>
            <div className="space-y-6">
              <div className="grid grid-cols-2 gap-4">
                <input name="anyo" placeholder="Año" defaultValue={config.anyo} className="bg-white/5 border border-white/10 rounded-xl p-4 text-white text-sm" />
                <input name="clases" type="number" placeholder="Clases" defaultValue={config.clases} className="bg-white/5 border border-white/10 rounded-xl p-4 text-white text-sm" />
              </div>
              <textarea name="cursos" placeholder="Cursos (Sep. por comas)" defaultValue={config.cursos} className="w-full bg-white/5 border border-white/10 rounded-xl p-4 text-white text-sm h-20" />
              <textarea name="asigs" placeholder="Materias (Sep. por comas)" defaultValue={config.asigs} className="w-full bg-white/5 border border-white/10 rounded-xl p-4 text-white text-sm h-20" />
            </div>
            <div className="mt-8 flex gap-4">
              <button type="button" onClick={() => setIsConfigOpen(false)} className="flex-1 py-4 text-xs font-black uppercase text-slate-500">Abortar</button>
              <button type="submit" className="flex-1 bg-cyan-600 py-4 rounded-xl text-xs font-black uppercase text-white">Aplicar</button>
            </div>
          </form>
        </div>
      )}

      {/* Modal Agregar */}
      {isAddOpen && (
        <div className="fixed inset-0 z-[60] bg-black/90 flex items-center justify-center p-6 backdrop-blur-md">
          <form 
            onSubmit={async (e) => {
              e.preventDefault();
              const d = new FormData(e.target);
              await addDoc(collection(db, 'artifacts', appId, 'users', user.uid, 'alumnos'), {
                nombre: d.get('nombre'),
                curso: d.get('curso'),
                faltas: 0,
                tardes: 0,
                evaluaciones: {},
                observaciones: "",
                anyo: config.anyo
              });
              setIsAddOpen(false);
            }}
            className="bg-[#0a0a0a] border border-white/10 w-full max-w-sm rounded-[2.5rem] p-10"
          >
            <h3 className="text-center text-white font-black uppercase text-xs tracking-widest mb-8">Nuevo Recluta</h3>
            <div className="space-y-6">
              <input name="nombre" required placeholder="Nombre del Alumno" className="w-full bg-white/5 border border-white/10 rounded-xl p-4 text-white text-sm uppercase" />
              <select name="curso" className="w-full bg-white/5 border border-white/10 rounded-xl p-4 text-white text-sm">
                {config.cursos.split(',').map(c => <option key={c} value={c.trim()}>{c.trim()}</option>)}
              </select>
            </div>
            <div className="mt-8 flex gap-4">
              <button type="button" onClick={() => setIsAddOpen(false)} className="flex-1 py-4 text-xs font-black uppercase text-slate-500">Cancelar</button>
              <button type="submit" className="flex-1 bg-cyan-600 py-4 rounded-xl text-xs font-black uppercase text-white">Registrar</button>
            </div>
          </form>
        </div>
      )}
    </div>
  );
}
